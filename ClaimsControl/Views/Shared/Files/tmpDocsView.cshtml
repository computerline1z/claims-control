@*{{log this}}*@
{{#if controller.isPhoto}}
	{{#each controller.docs}}
	<li class="ui-widget-content ui-corner-tr photo" {{bindAttr data-doc-id="docID" }}>

		<div  class="photo-image">
		{{#if hasThumb}}
			<a data-gallery="gallery" {{bindAttr href="urlDoc" }}>
			<img {{bindAttr src="urlThumb"}}  alt="thumb"/>
			</a>
		{{else}}
			<i {{bindAttr class="fileIcon" }} ></i>
		{{/if}}
		</div>
				
				{{#if this.editMode}}
					<div class="ExtendIt" style="margin:0">
						<input class="description" type="text" {{bindAttr value="description"}} style="width:100%;margin-bottom:5px;"/>
						<input class="docType" type="text" {{bindAttr value="docType"}}/>
						<div style="margin-top:18px">
							<a  {{action cancelSaveDoc this target="App.editDocsController"}}>Atšaukti</a>
							<button {{action SaveEditedDoc this target="App.editDocsController"}} class="btn small">Išsaugoti</button>
						</div>
					</div>
				{{else}}
					<div>{{description}}</div>
					<a {{bindAttr href="urlDoc" }} class="word-break" target="_blank">{{fileName}}</a></br>
					<p>{{userName}}&nbsp;{{fileDate}}</p>
					<div class="w100px">
						<i class="img32-mono_edit clickable" {{action editDoc this target="App.editDocsController"}}></i>
						<i class="img32-mono_delete clickable" {{action deleteDoc this target="App.editDocsController"}}></i>
					</div>
				{{/if}}

	</li>
	{{/each}}
{{else}}

	{{#each controller.docs}}
	<li class="docs relative" {{bindAttr data-doc-id="docID" }}>
		<div class="tr">
			<div class="td img">
					{{#if hasThumb}}
						<img {{bindAttr src="urlThumb"}} alt="thumb"/>
					{{else}}
						<i {{bindAttr class="fileIcon" }} ></i>
					{{/if}}
			</div>

			{{#if this.editMode}}

				<div class="td w50pr pad-l70 ExtendIt">
					<input class="docType" type="text" {{bindAttr value="docType"}}/><br/>
					<a {{bindAttr href="urlDoc"}} target="_blank" >{{fileName}}</a>
				</div>

				<div class="td w48pr pad-r100 margin-l2pr">
					<input class="description" type="text" {{bindAttr value="description"}} style="width:100%"/>
					</br>
					<p>{{docDetails}}</p>
				</div>

				<div class="td block-buttons absolute-right">
					<button {{action SaveEditedDoc this target="App.editDocsController"}} class="btn small">Išsaugoti</button>
					<a {{action cancelSaveDoc this target="App.editDocsController"}}>Atšaukti</a>
				</div>

			{{else}}

				<div class="td w50pr pad-l70">
					{{docType}}<br/>
					<a {{bindAttr href="urlDoc"}} target="_blank" >{{fileName}}</a>
				</div>

				<div class="td w50pr pad-r70">
					{{description}}</br><p>{{docDetails}}</p>
				</div>

				<div class="td w64px absolute-right">
					<i class="img32-mono_delete clickable right" {{action deleteDoc this target="App.editDocsController"}}></i>
					<i class="img32-mono_edit clickable right" {{action editDoc this target="App.editDocsController"}}></i>
				</div>

			{{/if}}
		</div><!-- tr -->
	</li>
	{{/each}}

{{/if}}
