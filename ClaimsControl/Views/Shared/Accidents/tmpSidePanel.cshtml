<div id="sidePanel" style="">
	<span>Animacijos greitis:</span><input type="text" value="400" {{action setAnimationSpeed on="change" target="App.accidentsController"}}/>
	<div class = "filtergroup">
		<a href="#" {{action "showAll"  target="view"}}>Panaikinti filtro nustatymus (rodyti visus įvykius)</a>
	</div>
</div>

<div class="lineTop filtergroup" ><h4>Rodyti įvykius tik</h4>
	<span id="chkOpen" style="margin:5px;display:inline-block;"  >	
	<input type="checkbox" id="chkWithOpen" /><label for="chkWithOpen" style="font: Arial, bold, 12px;">su</label>
	<input type="checkbox" id="chkWithOutOpen" /><label for="chkWithOutOpen">be</label>
	<span style="margin-left:5px;" class="ui-button-text">atvirų žalų</span>
	</span>

	<span id="chkDocs"style="margin:5px;display:inline-block;">	
	<input type="checkbox" id="chkWithDocs" /><label for="chkWithDocs">su</label>
	<input type="checkbox" id="chkWithOutDocs" /><label for="chkWithOutDocs">be</label>
	<span style="margin-left:5px;" class="ui-button-text">dokumentų</span>
	</span>
</div>
</br>

<div class="lineTop filtergroup" id="chkYears"><h4>Rodyti įvykius atitinkančius datą</h4>
<input type="checkbox" name="chkYears" id="chk_12month"/><label for="chk_12month"> Paskutiniai 12 mėn</label>
	{{#each "App.sidePanelController.years"}}
	{{log this}}
	<input type="checkbox" name="checkbox" id={{unbound chkId}} /><label for={{unbound chkId}}>{{unbound year}} metai</label>
	{{/each}}
</div>    
<br/>

<div class="lineTop filtergroup" id="chkClaimsTypes"><h4>Įvykiai, turintys šio tipo žalas</h4>
	{{#each "App.sidePanelController.claimTypes"}}
	{{#if this.visible}}
		<input type="checkbox" name="checkbox" id={{unbound chkId}} /><label for={{unbound chkId}}>{{unbound name}}</label>
	{{/if}}
	{{/each}}
</div>
<br />


