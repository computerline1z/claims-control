@model CC.Models.NewPasswordModel

@{
    ViewBag.Title = "Patvirtinimas";
    Layout = "ChangeEmail_Layout.cshtml";
}
<p>
    @{ Html.RenderAction("Header", "Account"); }
</p>


@using (Html.BeginForm()) {
    <div class="shadow" style="border: 2px solid #e8e8e4; background-color: #FFFFFF;">
        <div class="content">
            @Html.ValidationSummary(true, "Nepavyko. Pataisykite klaidas ir aktyvuokitės iš naujo.")

        <h2>Žalų valdymo sistema</h2>
        <p>Slaptažodžio keitimas.</p><br />
        <table border="0" cellspacing="0">
           <tr>
                <td style="text-align:left; padding-right:1em;">@Html.LabelFor(m => m.Password)</td>
                <td>@Html.PasswordFor(m => m.Password, new { id = "Password", @class="input" })</td>
            </tr>
            <tr>
                <td>&nbsp;&nbsp;</td>
                <td style="padding: 0 0 5px 5px;">
                    @Html.ValidationMessageFor(m => m.Password)                    
                </td>
            </tr>

            <tr>
                <td style="text-align:left; padding-right:1em;">@Html.LabelFor(m => m.ConfirmPassword)
                </td>
                <td>
                    @Html.PasswordFor(m => m.ConfirmPassword, new { id = "ConfirmPassword", @class="input" })
                </td>
            </tr>
            <tr>
                <td>&nbsp;&nbsp;</td>
                <td style="padding: 0 0 5px 5px;">
                    @Html.ValidationMessageFor(m => m.ConfirmPassword)                    
                </td>
            </tr>

            <tr>
                <td>&nbsp;&nbsp;</td>
                <td style="float: right; padding-top: 20px;">
                    <input type="submit" value="Patvirtinti" class="button" />
                </td>
            </tr>
        </table>
    </div>
</div>
}
