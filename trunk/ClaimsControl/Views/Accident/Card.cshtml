@model CC.Models.clsAccident
@{string vehicles="";
  if (Model.Vehicles!=null){
	  foreach (CC.Models.AccidentVehicles vehicle in Model.Vehicles) { vehicles += "{\"iD\":" + vehicle.ID + ",\"title\":\""+ vehicle.Title + "\"},"; }
	  vehicles = vehicles.TrimEnd(',');  
  }
 }
@if (@Model.NewRec == 1) { <h2 style="margin: 15px; display: inline-block">Naujo įvykio registravimas</h2>}
else {<h2 style="margin: 15px; display: inline-block">Įvykis Nr. @Model.Accident.No</h2>}
<a id="btnReturnToAccidents" href="javascript:void(0);return false;">(atgal į įvykių sąrašą)</a>
<div id="accidentTab">
<ul id='ulWhiteMenu' class='ulWhiteMenu'>
	<li><a href="#AccidentForm">
		<span>Įvykio informacija</span></a></li>
	<li><a href="#AccDocs">
		<span>Įvykio dokumentai</span></a></li>
</ul>
<div id="AccidentForm" class="inputForm whiteTab container" data-ctrl=
	@{if (Model.NewRec == 1) {
		  <text>'{"NewRec":1,"Source":"tblAccidents","tblUpdate":"tblAccidents"}'</text>
	  }
	  else {
		  <text>'{"NewRec":0,"Source":"tblAccidents","vehicles":[@vehicles],
		  "id":@Model.Accident.ID,"Lat":"@Model.Accident.Lat.ToString().Replace(",", ".")","Lng":"@Model.Accident.Lng.ToString().Replace(",", ".")"}'</text>
	  }}
	>
	<div class='left border w47pr_mp ui-corner-all'>
    
		@{if (Model.NewRec == 1) {
			<div class="row">
				<div class='ExtendIt col w48pr' data-ctrl='{"Field":"AccidentTypeID","id":"lstAccidentTypes","labelType":"Top"}'></div>
				<div class='ExtendIt col box-w48pr-left' data-ctrl='{"Field":"DriverID","id":"lstDrivers","labelType":"Top","List":{"ListType": "None","Editable":{"EditThis": true}}}'></div>
         </div>
			<div class='ExtendIt row' data-ctrl='{"Field":"ShortNote","id":"ShortNote","labelType":"Top"}'></div>
			<div class='ExtendIt row' data-ctrl='{"Field":"Date","id":"Date","labelType":"Top", "Type":"DateTimeLess","Default":"Today","Plugin":{"datepicker":{"minDate":"-3y","maxDate":"0"}}}'></div>
			<div class='ExtendIt col w48pr' data-ctrl='{"Field":"IsNotOurFault","id":"IsNotOurFault","labelType":"Top"}'></div>
			<div class='ExtendIt col box-w48pr-left' data-ctrl='{"Field":"IsOtherParticipants","id":"IsOtherParticipants","labelType":"Top"}'></div>
			<br/>
			<div class='ExtendIt' data-ctrl='{"Field":"LongNote","classes":{"input":"row"},"id":"LongNote","labelType":"Top"}'></div>
			<br/>
	 }
	 else {
			<div class="row">
				<div class='ExtendIt col w48pr' data-ctrl='{"Value":@Model.Accident.AccidentTypeID, "Field":"AccidentTypeID","id":"lstAccidentTypes","labelType":"Top"}'></div>
				<div class='ExtendIt col box-w48pr-left' data-ctrl='{"Value":@Model.Accident.DriverID, "Field":"DriverID","id":"lstDrivers","labelType":"Top", "List":{"ListType": "None","Editable":{"EditThis": true}}}'></div>
			</div>
			<div class='ExtendIt row' data-ctrl='{"Value":"@Model.Accident.ShortNote", "Field":"ShortNote","id":"ShortNote","labelType":"Top"}'></div>
			<div class='ExtendIt row' data-ctrl='{"Value":"@Model.Accident.Date", "Field":"Date","id":"Date","labelType":"Top","Type":"DateTimeLess","Default":"Today","Plugin":{"datepicker":{"minDate":"-3y","maxDate":"0"}}}'></div>
			<div class='ExtendIt col w48pr' data-ctrl='{"Value":"@Model.Accident.IsNotOurFault", "Field":"IsNotOurFault","id":"IsNotOurFault","labelType":"Top"}'></div>
			<div class='ExtendIt col box-w48pr-left' data-ctrl='{"Value":"@Model.Accident.IsOtherParticipants", "Field":"IsOtherParticipants","id":"IsOtherParticipants","labelType":"Top"}'></div>
			<br/>
			<div class='ExtendIt' data-ctrl='{"Value":"@Model.Accident.LongNote", "Field":"LongNote","classes":{"input":"row"},"id":"LongNote","labelType":"Top"}'></div>
			<br/>
	 }
		}
		<div class="container">
			@{if (Model.NewRec != 1) {<div class="left mini"><button id="btnDeleteAccident" class="btn btn-small"><i class="img32-bin" title="Ištrinti žalą"></i></button></div>}}
			<div class="right medium w48pr">
				<button id="btnSaveAccident" class="btn btnSave">Išsaugoti</button>	
				<a style="margin-left: 2%;" id="btnCancel" href="javascript:void(0);return false;">Atšaukti</a>
			</div>
		</div>
		</div>

	<div class='right w47pr_m' style="position:relative">
	@*---------------------------------------------------------------*@

		<div id='divMapHead'>
			<div class='box_3pr_p border'>
				<div class='dialog-form-label'>Įvykio vieta:</div>
				@{if (Model.NewRec == 1) {
					<span style='font-size: medium; font-weight: bold; float: left;' id='txtPlace'>Nurodykite spragtelėjimu žemėlapyje..</span>
					<div><a id="btnEditMap" data-caption="Change" style='font-size: small; margin-right: 20px; margin-left: 20px;' >Keisti</a><a id="linkToGoogle" style="float:right;" target='_blank' >Nuoroda į Google Žemėlapį</a></div>
@*					<span style='font-size: medium; font-weight: bold; float: left;' id='txtPlace'>Nurodykite spragtelėjimu žemėlapyje..</span>
*@				}
		else {
					<span style='font-size: medium; font-weight: bold; float: left;' id='txtPlace'>@Model.Accident.LocationAddress, @Model.Accident.LocationDistrict, @Model.Accident.LocationCountry</span>
					<div><a id="btnEditMap" data-caption="Change" style='font-size: small; margin-right: 20px; margin-left: 20px;' >Keisti</a><a id="linkToGoogle" style="float:right;" target='_blank' >Nuoroda į Google Žemėlapį</a></div>
		}}
					<div style="clear: both;"></div>
			</div>
		</div>

			<div id='divSearchMap' class="box" style="@{if (Model.NewRec != 1) {<text>display:none;</text>}}">									 
				<h5>Surasti vietovardį arba koordinates:</h5>
				<input type='text' style="width: 80%;" id='inputChooseTown' placeholder="Įveskite gyvenvietę parodyti žemėlapyje.." class='text ui-widget-content defaultText defaultTextActive' />
				<div class="right" >
					<a id="btnMapTown">Rodyti</a>@{if (Model.NewRec == 0) {<a id="cancelMap" >Atšaukti</a>}}
				</div>
			</div>

			<div style="height:417px;overflow:hidden;">
				<div id='divMap' class="ui-corner-bottom;">map</div>
			</div>

	@*---------------------------------------------------------------*@
	</div>
</div>
<div id="AccDocs" class="whiteTab"  data-ctrl='{"id":0}'>
	<div id="uploadDocsToAccident" style="margin:0 auto;"></div>
	<div class="cont" style="background:#ffffff;border:1px solid #ddd;width:100%;"></div>
</div>
</div>
