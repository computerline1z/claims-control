
{{#each c in view.content}} 
{{log c}}
{{#unless c.newClaim}}
	<div id='divClaimCard' class="cont centerBlock" style="width:750px;" data-ctrl='{"id":"{{unbound c.ID}}","NewRec":"0","Source":"tblClaims","TypeID":"{{unbound c.TypeID}}"}'>
{{else}}
	<div id='divClaimCardDetails'>
{{/unless}}
{{#compare "this.TypeID" "==" "6"}} 
	<div class='left'>
	{{updatableField c Field="Days" id="inputDays" labelType="Top" event="keyUp_shallChangeLossAmount"}}
	{{updatableField c Field="PerDay" id="inputPerDay" labelType="Top" event="keyUp_shallChangeLossAmount"}}
	{{updatableField c Field="LossAmount" id="inputSum" attr="DISABLED" labelType="Top"}}@*(Math.round((Claim.Days*Claim.PerDay*100))/100)*@
	</div><div class='right'>
	{{updatableField c Field="VehicleID" id="lstVehicles" labelType="Top"}}
	</div>
{{else}}
	<div class='left'>
	{{updatableField c Field="VehicleID" id="lstVehicles" labelType="Top"}}
	{{updatableField c Field="InsPolicyID" id="lstInsPolicies" labelType="Top"}}
	{{updatableField c Field="InsurerClaimID" labelType="Top"}}
	</div><div class='right'>
	{{updatableField c Field="LossAmount" id="LossAmount" labelType="Top"}} @*"classes\":\"LossAmount*@
	{{updatableField c Field="InsuranceClaimAmount" id="InsuranceClaimAmount" labelType="Top"}} @*"classes\":\"InsuranceClaimAmount*@
	
	{{#compare "this.TypeID" "==" "1"}} 
		{{updatableField c Field="IsTotalLoss" labelType="Top"}}
	{{/compare}}
	{{#compare "this.TypeID" "==" "2"}} 
		{{updatableField c Field="IsInjuredPersons" labelType="Top"}}
	{{/compare}}
	</div>
{{/compare}}
</div>
{{/each}}

<div class="frmbottom cont">
	{{#unless c.newClaim}}
	<div class="left small"><button class="btn small"><i style="margin-top:0" class="img32-bin" title="Ištrinti žalą" {{action "DeleteClaim"}}></i></button></div>
	{{/unless}}
	<div class="right medium" style="margin-top:10px;">
		<button class="btn success small {{#if c.newClaim}}NewClaim{{/if}}" {{action "SaveClaim"}}></i>IŠSAUGOTI</button>
		<a href="#" title="Atšaukti pakeitimus" style="margin:10px;" {{action "CancelSaveClaim"}}>Atšaukti</a>
	</div>
</div>