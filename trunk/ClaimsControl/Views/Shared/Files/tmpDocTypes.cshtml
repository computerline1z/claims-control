<fieldset class="ui-corner-all fieldSetBorder w70pr centerBlock" style="padding:0 20px;">
	<legend>Įvykio dokumentų tipai</legend>
	{{log this}}
	{{#each App.docsTypesController.docTypes_accident}}
		{{#if this.edit}} 
		<div class="docType"><input {{bindAttr value="name" }} type="text"><button class="btn small" {{action saveDocType this}}>Išsaugoti</button><button class="btn small" {{action cancelDocType this}}>Atšaukti</button></div>
		{{else}}
			<div class="docType">
				<div style="float:left">{{name}}</div>		
				<div style="float:right">
					<a href="#" {{action editDocType this}}><i class="img18-pencil"></i></a>
					<a href="#" {{action deleteDocType this}}><i class="img18-delete"></i></a>
				</div>
			</div>
		{{/if}}
	{{/each}}
	{{#if this.addNewType2}} 
		<div style="line-height:30px;"><input Placeholder="Įveskite naują tipą" type="text" data-category-id=2><button class="btn small" {{action saveNewDocType}}>Išsaugoti</button></div><button class="btn small" data-category-id=2 {{action cancelNewDocType}}>Atšaukti</button></div>
	{{else}}
		<a style="line-height:30px;" {{action addNewDocType}} data-category-id=2 href="#">Pridėti dokumento tipą</a>
	{{/if}}
</fieldset>
</br>

